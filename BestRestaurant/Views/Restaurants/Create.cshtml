  @Html.TextBoxFor(model => model.Name)
  <label for="RoomRating">Room Rating</label>
  <input id="RoomRating" name="RoomRating" type="number" min=0 max=5 />
  <button type="submit">Add</button>
}
<p>@Html.ActionLink("Cancel", "Index")</p>